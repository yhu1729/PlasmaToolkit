{
  "version": 10,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 31,
    "patch": 6
  },
  "include": [],
  "configurePresets": [
    {
      "name": "debug-sequential",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-${hostSystemName}-$env{PT_HOST_COMPILER}-$env{PT_DEVICE_COMPILER}/${presetName}",
      "cacheVariables": {
        "PT_BUILD_TYPE": "Debug",
        "PT_HOST_PROCESSOR": "$env{PT_HOST_PROCESSOR}",
        "PT_HOST_COMPILER": "$env{PT_HOST_COMPILER}",
        "PT_DEVICE_PROCESSOR": "$env{PT_DEVICE_PROCESSOR}",
        "PT_DEVICE_COMPILER": "$env{PT_DEVICE_COMPILER}",
        "PT_CANARY": "3",
        "PT_VERBOSITY": "4",
        "PT_USE_MPI": "OFF",
        "PT_USE_NCCL": "OFF"
      },
      "environment": {}
    },
    {
      "name": "debug-mpi",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-${hostSystemName}-$env{PT_HOST_COMPILER}-$env{PT_DEVICE_COMPILER}/${presetName}",
      "cacheVariables": {
        "PT_BUILD_TYPE": "Debug",
        "PT_HOST_PROCESSOR": "$env{PT_HOST_PROCESSOR}",
        "PT_HOST_COMPILER": "$env{PT_HOST_COMPILER}",
        "PT_DEVICE_PROCESSOR": "$env{PT_DEVICE_PROCESSOR}",
        "PT_DEVICE_COMPILER": "$env{PT_DEVICE_COMPILER}",
        "PT_CANARY": "3",
        "PT_VERBOSITY": "4",
        "PT_USE_MPI": "ON",
        "PT_USE_NCCL": "OFF"
      },
      "environment": {}
    }
  ],
  "buildPresets": [
    {
      "name": "debug-sequential",
      "configurePreset": "debug-sequential"
    },
    {
      "name": "debug-mpi",
      "configurePreset": "debug-mpi"
    }
  ],
  "testPresets": [
    {
      "name": "debug-sequential",
      "configurePreset": "debug-sequential",
      "output": {
        "labelSummary": true,
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "ignore",
        "stopOnFailure": true
      },
      "filter": {
        "exclude": {
          "label": ""
        }
      }
    },
    {
      "name": "debug-mpi",
      "configurePreset": "debug-mpi",
      "output": {
        "labelSummary": true,
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "ignore",
        "stopOnFailure": true
      },
      "filter": {
        "exclude": {
          "label": ""
        }
      }
    }
  ],
  "workflowPresets": [
    {
      "name": "debug-sequential",
      "steps": [
        {
          "type": "configure",
          "name": "debug-sequential"
        },
        {
          "type": "build",
          "name": "debug-sequential"
        },
        {
          "type": "test",
          "name": "debug-sequential"
        }
      ]
    },
    {
      "name": "debug-mpi",
      "steps": [
        {
          "type": "configure",
          "name": "debug-mpi"
        },
        {
          "type": "build",
          "name": "debug-mpi"
        },
        {
          "type": "test",
          "name": "debug-mpi"
        }
      ]
    }
  ]
}
